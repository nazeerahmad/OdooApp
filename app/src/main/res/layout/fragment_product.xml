<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".ProductFragment">

    <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:id="@+id/data_overview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >


            <!--        <TextView-->
            <!--            android:id="@+id/total_data_title"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:fontFamily="@font/opensans_bold"-->
            <!--            android:layout_marginBottom="@dimen/_5sdp"-->
            <!--            android:text="Active Services"-->
            <!--            android:textAllCaps="true"-->
            <!--            android:textColor="@color/blue"-->
            <!--            android:textSize="@dimen/sixteen_sp" />-->





            <RelativeLayout
                android:id="@+id/relPurchaseOrder"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_bg_rounded_corner"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="@dimen/_80sdp">


                <ImageView
                    android:id="@+id/purchaseIcon"
                    android:layout_width="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/purchases_icon"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="70dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_toRightOf="@+id/purchaseIcon"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:text="Purchase Orders"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="#902782"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_15sdp"
                    android:textSize="15dp"
                    android:id="@+id/order_count"
                    android:fontFamily="@font/opensans_bold"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relApproval"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/gradient_bg_rounded_corner"
                android:layout_height="@dimen/_80sdp">


                <ImageView
                    android:id="@+id/job_icon"
                    android:layout_width="70dp"
                    android:src="@drawable/purchase_approval_icon"
                    android:padding="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_height="70dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_toRightOf="@+id/job_icon"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:text="Purchase Approval"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/teal_200"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_15sdp"
                    android:id="@+id/job_count"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relUpcomingOrder"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_bg_rounded_corner"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/connection_icon"
                    android:layout_width="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/upcoming_icon"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="70dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_toRightOf="@+id/connection_icon"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:text="Upcoming orders"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="#F9B54A"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_15sdp"
                    android:id="@+id/connection_count"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relOrderHistory"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_bg_rounded_corner"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                >


                <ImageView
                    android:id="@+id/pending_request_icon"
                    android:layout_width="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/order_history"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="70dp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_toRightOf="@+id/pending_request_icon"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:text="Order History"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="#777559"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_15sdp"
                    android:id="@+id/pending_request_count"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relStock"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_bg_rounded_corner"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="@dimen/_80sdp"
                >

                <ImageView
                    android:id="@+id/service_request_icon"
                    android:layout_width="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/stock_icon"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="70dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_toRightOf="@+id/service_request_icon"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:text="Stock"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#D53F68"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_15sdp"
                    android:id="@+id/service_count"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>




        </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>